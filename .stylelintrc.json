{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recess-order"
  ],
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": "^([a-z]+([A-Z][a-z0-9]+)*)$",
    "unit-allowed-list": ["px", "vw", "wh", "%", "fr"],
    "selector-max-id": 0
  }
}
